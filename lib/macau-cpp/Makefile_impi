#!/usr/bin/make -f
EXECS=macau_mpi
MPICXX=mpiicpc
CXXFLAGS=-std=c++11 -Wall -Wno-unknown-pragmas -DNDEBUG -O3 -fopenmp -fstrict-aliasing -g -march=native
CXXFLAGS+=-DEIGEN_DONT_PARALLELIZE=1

INCLUDES := -I ../eigen3 -I ../libfastsparse
LDFLAGS := -lm -lmkl -lpthread

all: ${EXECS}

%.o: %.cpp %.h
	$(MPICXX) $(CXXFLAGS) $(INCLUDES) -c $< -o $@

OBJS = mvnormal.o chol.o linop.o latentprior.o noisemodels.o macau.o macau_mpi.o

macau_mpi: ${OBJS}
	${MPICXX} ${CXXFLAGS} ${INCLUDES} -o macau_mpi ${OBJS} ${LDFLAGS} ${LIBLOCS}

clean:
	rm -f ${EXECS} *.o
