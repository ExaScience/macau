#!/usr/bin/make -f

EXECS=macau_mpi
#MPICXX=OMPI_CXX=g++-4.9 mpicxx
MPICXX=mpicxx
CXXFLAGS=-std=c++11 -Wall -Wno-unknown-pragmas -O0 -fstrict-aliasing -g
# CXXFLAGS=-fopenmp

INCLUDES := -I ../eigen3 -I ../libfastsparse
LIBLOCS := -L/usr/local//Cellar/openblas/0.2.18_2/lib
LDFLAGS := -lm -lopenblas -lpthread

all: ${EXECS}

%.o: %.cpp %.h
	$(MPICXX) $(CXXFLAGS) $(INCLUDES) -c $< -o $@

OBJS = mvnormal.o chol.o linop.o latentprior.o noisemodels.o macau.o macau_mpi.o

macau_mpi: ${OBJS}
	${MPICXX} ${CXXFLAGS} ${INCLUDES} -o macau_mpi ${OBJS} ${LDFLAGS} ${LIBLOCS}

clean:
	rm -f ${EXECS} *.o
